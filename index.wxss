/* package/blueFi/index.wxss */
.blueFl {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px 0px;
    padding-bottom: 0px;
    box-sizing: border-box;
}

.devices {
    margin-top: 20px;
    height: calc(100vh - 84px);
    padding-top: 10px;
}
.devices .device {
    width: 200px;
    margin: 10px auto;

    padding: 5px 10px;
    border-radius: 6px;
    border: 1px solid #eee;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);

}
